{
  "name": "tech6-fullstack",
  "version": "1.0.0",
  "description": "Projeto fullstack com Docker, Nginx, MySQL e Node.js",
  "scripts": {
    "dev": "docker-compose up --build",
    "dev:detached": "docker-compose up -d --build",
    "stop": "docker-compose down",
    "stop:volumes": "docker-compose down -v",
    "logs": "docker-compose logs -f",
    "logs:backend": "docker-compose logs -f backend",
    "logs:frontend": "docker-compose logs -f frontend",
    "logs:db": "docker-compose logs -f db",
    "logs:nginx": "docker-compose logs -f nginx",
    "restart": "docker-compose restart",
    "clean": "docker-compose down -v --remove-orphans && docker system prune -f",
    "setup": "cp env.example .env && echo 'Arquivo .env criado! Configure as variáveis conforme necessário.'",
    "health": "curl -f http://localhost/health || echo 'Serviços não estão respondendo'",
    "test:e2e": "cd cypress && npm run cypress:run",
    "test:e2e:open": "cd cypress && npm run cypress:open",
    "test": "echo \"Nenhum teste na raiz\" && exit 0"
  },
  "keywords": [
    "docker",
    "nginx",
    "mysql",
    "nodejs",
    "react",
    "fullstack"
  ],
  "author": "Seu Nome",
  "license": "MIT",
  "dependencies": {
    "antd": "^5.26.1",
    "axios": "^1.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@types/axios": "^0.9.36",
    "cypress": "^13.6.5",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "@types/node": "^20.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
